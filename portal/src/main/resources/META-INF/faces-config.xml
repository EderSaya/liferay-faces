<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	xmlns:util="http://www.liferay.com/xml/ns/liferay-faces-util-extension">
	<faces-config-extension>
		<name>LiferayFacesPortal</name>
		<after>
			<name>LiferayFacesAlloy</name>
		</after>
	</faces-config-extension>
	<lifecycle>
		<phase-listener>com.liferay.faces.portal.lifecycle.LiferayLocalePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
	   <managed-bean-name>liferay</managed-bean-name>
	   <managed-bean-class>com.liferay.faces.portal.bean.Liferay</managed-bean-class>
	   <managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<component>
		<component-type>com.liferay.faces.portal.PermissionsURL</component-type>
		<component-class>com.liferay.faces.portal.component.PermissionsURL</component-class>
	</component>
	<component>
		<component-type>com.liferay.faces.portal.InputEditorInternal</component-type>
		<component-class>com.liferay.faces.portal.component.InputEditorInternal</component-class>
	</component>
	<factory>
		<factory-extension>
			<util:message-context-factory>com.liferay.faces.portal.context.internal.MessageContextFactoryPortalImpl</util:message-context-factory>
		</factory-extension>
	</factory>
	<render-kit>
		<renderer>
			<component-family>com.liferay.faces.portal.PermissionsURL</component-family>
			<renderer-type>com.liferay.faces.portal.renderkit.PermissionsURLRenderer</renderer-type>
			<renderer-class>com.liferay.faces.portal.renderkit.PermissionsURLRenderer</renderer-class>
		</renderer>
	</render-kit>
	<validator>
		<validator-id>com.liferay.faces.portal.CaptchaValidator</validator-id>
		<validator-class>com.liferay.faces.portal.validator.CaptchaValidator</validator-class>
	</validator>
	<validator>
		<validator-id>com.liferay.faces.portal.RichTextLengthValidator</validator-id>
		<validator-class>com.liferay.faces.portal.validator.RichTextLengthValidator</validator-class>
	</validator>
</faces-config>
